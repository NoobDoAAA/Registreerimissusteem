@if (ViewBag.Ettevoted == null || !Enumerable.Any(ViewBag.Ettevoted))
{
    <div style="padding:3rem 5rem">Ei ole veel ühtegi...</div>
}
else
{
    <table class="table table-striped">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Juriidiline Nimi</th>
                <th scope="col">Registrikood</th>
                <th scope="col">Osavõtjate Arv</th>
                <th></th>
            </tr>
        </thead>

        @{
            var i = 1;

            foreach (var item in ViewBag.Ettevoted)
            {
                <tr>
                    <td class="col-1">@i</td>
                    <td class="col-2">@item.EttevoteNimi</td>
                    <td class="col-2">@item.Registrikood</td>
                    <td class="col-1">@item.OsavotjateArv</td>
                    <td class="col-1">
                        <span class="action-link">Eemalda</span>
                        <span class="action-link">Muuda</span>
                    </td>
                </tr>

                i++;
            }
        }

    </table>
}