<div class="row">
    <div class="col-6 header-col">
        Nimetus
    </div>
    <div class="col header-col">
        Toimumisaeg
    </div>
    <div class="col header-col">
        Toimumise Koht
    </div>
    <div class="col-1 header-col">
        Osavõtjad
    </div>
</div>

@foreach (var item in ViewBag.MoodunudUritused)
{
    <div class="row">
        <div class="col-6 my-col">
            @item.Nimi
        </div>
        <div class="col my-col">
            @item.Toimumisaeg.ToString("dd.MM.yyyy HH:mm")
        </div>
        <div class="col my-col">
            @item.ToimumiseKoht
        </div>
        <div class="col-1 my-col">
            @item.OsavotjateArv
        </div>
    </div>
}